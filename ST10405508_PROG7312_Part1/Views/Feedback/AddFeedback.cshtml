@model ST10405508_PROG7312_Part1.Models.Feedback

@{
    ViewData["Title"] = "Add Feedback";
}
<a asp-controller="Home" asp-action="Index" class="btn btn-primary">back</a>

<h2>Add Feedback</h2>

<!-- Display Success or Error Messages (MicrosoftLearn, 2025):-->
@if (ViewBag.SuccessMsg != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMsg
    </div>
}
@if (ViewBag.ErrorMsg != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMsg
    </div>
}
<!--Title of addfeedback page (BoostMyTool, 2022):-->
<form asp-action="AddFeedback" method="post">
    <div class="mb-3">
        <label asp-for="title" class="form-label">Title</label>
        <input asp-for="title" class="form-control" placeholder="Enter feedback title" />
        <span asp-validation-for="title" class="text-danger"></span>
    </div>
    <!--Description (BoostMyTool, 2022):-->
    <div class="mb-3">
        <label asp-for="description" class="form-label">Description</label>
        <textarea asp-for="description" class="form-control" rows="4" placeholder="Describe your feedback"></textarea>
        <span asp-validation-for="description" class="text-danger"></span>
    </div>
    <!--Document being sent in IFormFile Type (MicrosoftLearn, 2025):-->
    <div class="mb-3">
        <label for="documentFile" class="form-label">Attach Document (Optional)</label>
        <input type="file" class="form-control" name="documentFile" id="documentFile" />
    </div>

    <button type="submit" class="btn btn-primary">Submit Feedback</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model IEnumerable<ST10405508_PROG7312_Part1.Models.Feedback>

@{
    ViewData["Title"] = "My Feedbacks";
}
<a asp-controller="Home" asp-action="Index" class="btn btn-primary">back</a>
<h2>My Feedbacks</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You have not submitted any feedback yet or you are not logged in. please login</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <!--displaying the headings for the table (BoostMyTool, 2022):-->
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Date Submitted</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feedback in Model)
            {
                <tr>
                    <!--displaying the feedback info (BoostMyTool, 2022):-->
                    <td>@feedback.title</td>
                    <td>@feedback.description</td>
                    <td>@feedback.status</td>
                    <td>@feedback.date</td>
                </tr>
            }
        </tbody>
    </table>
}


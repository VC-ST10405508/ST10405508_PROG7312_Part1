@model IEnumerable<ST10405508_PROG7312_Part1.Models.ReportIssue>

@{
    ViewData["Title"] = "Reports";
}
<a asp-controller="Home" asp-action="Index" class="btn btn-primary">back</a>
<h2>All Reports</h2>

@if (!Model.Any())
{
    <!--If no data exists yet displays this paragraph (BoostMyTool, 2022):-->
    <p>No reports have been submitted yet.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <!--Creating table headings (BoostMyTool, 2022):-->
                <th>Report ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Status</th>
                <th>Location</th>
                <th>Date</th>
                <th>User ID</th>
                <th>Document</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <!--displaying the report info (BoostMyTool, 2022):-->
                    <td>@report.reportID</td>
                    <td>@report.reportName</td>
                    <td>@report.reportCategory</td>
                    <td>@report.status</td>
                    <td>@report.location</td>
                    <td>@report.reportDate</td>
                    <td>@report.userID</td>
                    <td>
                        <!--bootstrap flex to help load the image correctly (Bootstrap, 2025):-->
                    @if (!string.IsNullOrEmpty(report.documentID))
                    {
                        <div class="d-flex align-items-center gap-2">
                            <a asp-action="GetDocument"
                               asp-route-documentId="@report.documentID"
                               class="btn btn-sm btn-secondary">
                                Download
                            </a>

                            <img src="@Url.Action("GetDocument", "ReportIssue", new { documentId = report.documentID })"
                                 alt="Preview"
                                 style="width:40px; height:40px; object-fit:cover;"
                                 onerror="this.style.display='none';" />
                        </div>
                        
                    }
                    else
                    {
                        <span>No File</span>
                    }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
